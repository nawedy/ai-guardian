# env.example
# AI Guardian Production Environment Configuration
# Copy this file to .env and update with your actual values

# =====================================================
# SECURITY CONFIGURATION
# =====================================================
# Generate secure random keys for production
SECRET_KEY=your-super-secret-key-here-min-32-chars
JWT_SECRET_KEY=your-jwt-secret-key-here-min-32-chars
ENCRYPTION_KEY=your-encryption-key-here-min-32-chars

# =====================================================
# DATABASE CONFIGURATION
# =====================================================
# NeonDB PostgreSQL (Production)
DATABASE_URL=postgresql://username:password@host:5432/database_name
DATABASE_POOL_SIZE=20
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# SQLite (Development fallback)
SQLITE_DATABASE_PATH=./database/app.db

# =====================================================
# MICROSERVICES CONFIGURATION
# =====================================================
# Service Discovery and Communication
API_GATEWAY_URL=https://your-api-gateway.railway.app
CODE_SCANNER_URL=https://your-code-scanner.railway.app
INTELLIGENT_ANALYSIS_URL=https://your-intelligent-analysis.railway.app
REMEDIATION_ENGINE_URL=https://your-remediation-engine.railway.app
ADAPTIVE_LEARNING_URL=https://your-adaptive-learning.railway.app

# Internal Service Authentication
SERVICE_TO_SERVICE_TOKEN=your-internal-service-token

# =====================================================
# EXTERNAL API INTEGRATIONS
# =====================================================
# AI/ML Services
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
HUGGINGFACE_API_TOKEN=your-huggingface-token

# Code Analysis Tools
SONARQUBE_TOKEN=your-sonarqube-token
SNYK_TOKEN=your-snyk-token
CHECKMARX_API_KEY=your-checkmarx-key

# Version Control Integration
GITHUB_TOKEN=your-github-token
GITLAB_TOKEN=your-gitlab-token
BITBUCKET_TOKEN=your-bitbucket-token

# =====================================================
# REAL-TIME COMMUNICATION
# =====================================================
# WebSocket Configuration
WEBSOCKET_URL=wss://your-websocket-server.railway.app
WEBSOCKET_SECRET=your-websocket-secret
REDIS_URL=redis://username:password@host:6379

# =====================================================
# MONITORING AND LOGGING
# =====================================================
# Application Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
LOG_LEVEL=INFO
ENABLE_METRICS=true

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# =====================================================
# SECURITY SETTINGS
# =====================================================
# CORS Configuration
ALLOWED_ORIGINS=https://your-frontend.vercel.app,https://your-domain.com
CORS_ALLOW_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=20

# Authentication
SESSION_TIMEOUT=3600
PASSWORD_MIN_LENGTH=12
REQUIRE_MFA=true

# =====================================================
# PERFORMANCE SETTINGS
# =====================================================
# Caching
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Async Processing
WORKER_PROCESSES=4
WORKER_THREADS=10
MAX_CONCURRENT_SCANS=50

# =====================================================
# DEPLOYMENT ENVIRONMENT
# =====================================================
ENVIRONMENT=production
DEBUG=false
TESTING=false

# Platform-specific
RAILWAY_STATIC_URL=https://your-static-files.railway.app
VERCEL_URL=https://your-frontend.vercel.app

# =====================================================
# FEATURE FLAGS
# =====================================================
ENABLE_REAL_TIME_SCANNING=true
ENABLE_AI_ANALYSIS=true
ENABLE_COMPLIANCE_MONITORING=true
ENABLE_ADAPTIVE_LEARNING=true
ENABLE_TEAM_MANAGEMENT=true
ENABLE_API_RATE_LIMITING=true
ENABLE_AUDIT_LOGGING=true 